    <script src="~/Content/bootstrap-datetimepicker-master/js/bootstrap-datetimepicker.js"></script>
    <script>
        $(function () {
            //datetimepicker
            $.prototype.datetimepicker.DPGlobal.nonpunctuation = /[^ -\/:-@@\[-`{-~\t\n\rZ]+/g;           
        });
        function setDateTime(timeElement) {
                var currentDate = new Date();
                if (timeElement.val() === "0001/1/1 上午 12:00:00") {
                    timeElement.val(currentDate.getFullYear() + '/' + (currentDate.getMonth() + 1) + '/' + currentDate.getDate() + ' ' + currentDate.getHours() + ":" + PrefixInteger(currentDate.getMinutes(), 2))
                } else {
                    var strAry = timeElement.val().split('/');
                    var daytime = strAry[2].split(' ');
                    var timestr;
                    if (daytime.length > 2 && daytime[2] != '') {
                        timestr = daytime[2].split(':');
                    }
                    else {
                        timestr = daytime[1].split(':');
                    }
                    var hourtime = parseInt(timestr[0]);

                    if (daytime[1] == "下午") {
                        if (hourtime < 12) {
                            hourtime = hourtime + 12;
                        }
                    }
                    else if (daytime[1] == "上午" && hourtime == 12) {
                        hourtime = 0
                    }
                    timeElement.val(strAry[0] + '/' + strAry[1] + '/' + daytime[0] + ' ' + hourtime + ":" + timestr[1])
                }
                currentDate.setFullYear(currentDate.getFullYear())
                currentDate.setMonth(0);
                currentDate.setDate(0);
                //currentDate.setMinutes(0,0,0);
                currentDate.setHours(0, 0, 0);
                //console.log(currentDate)
                timeElement.datetimepicker({
                    todayHighlight: true,
                    weekStart: 1,
                    minView: 0,
                    autoclose: true,
                    //pickerPosition: 'bottom-left',
                    format: 'yyyy/mm/dd hh:ii ',
                    //timezone: 'UTC',
                    startDate: currentDate,
                    disabledDate: false
                });
        }
    </script>
